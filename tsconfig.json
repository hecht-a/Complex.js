{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./build",
        "allowJs": false,
        "target": "ES2020",
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}